<config>
    <sections>
    	<customer>
    		<groups>
    			<address>
    				<fields>
                        <disallow_poboxes translate="label" module="aydus_disallowpobox">
                            <label>Disallow PO Boxes in Billing Address</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>If Yes, customer will NOT be able to enter a PO Box as a street address</comment>
                        </disallow_poboxes>    				
    				</fields>
    			</address>
    		</groups>
    	</customer>
        <shipping>
            <groups>
                <option>
                    <fields>
                        <disallow_poboxes translate="label" module="aydus_disallowpobox">
                            <label>Disallow PO Boxes in Shipping Address</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>If Yes, customer will NOT be able to enter a PO Box as a street address</comment>
                        </disallow_poboxes>
                    </fields>  
                </option>
            </groups>
        </shipping>
    </sections>
</config>

